<Window x:Class="ShareTabWin.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AboutDialog" Height="450" Width="300" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=close}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
	<Window.Background>
		<ImageBrush Stretch="None" ImageSource="about.png"/>
	</Window.Background>
    <Grid>
    	<Button x:Name="close" Content="Ok, I've seen enough!" Height="28" Margin="0,20,0,0" Width="170" VerticalAlignment="Top" IsCancel="True"/>
        
    </Grid>
</Window>
