<dock:DocumentContent x:Class="ShareTabWin.BrowserWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:dock="clr-namespace:AvalonDock;assembly=AvalonDock"
                      xmlns:skyb="clr-namespace:Skybound.Gecko;assembly=Skybound.Gecko"
                      Title="Browser Window"
                      Loaded="DocumentContent_Loaded">

    <dock:DocumentContent.CommandBindings>
        <CommandBinding Command="BrowseBack" Executed="GoBack_Executed" CanExecute="GoBack_CanExecute" />
        <CommandBinding Command="BrowseForward" Executed="GoForward_Executed" CanExecute="GoForward_CanExecute" />
        <CommandBinding Command="Refresh" Executed="Refresh_Executed" />
        <CommandBinding Command="BrowseStop" />
    </dock:DocumentContent.CommandBindings>

    <DockPanel>
        <DockPanel Height="26" x:Name="navBar" DockPanel.Dock="Top" >
            <Button Command="BrowseBack" DockPanel.Dock="Left">
                <Image Source="Icons\back.png" />
            </Button>
            <Button Command="BrowseForward" DockPanel.Dock="Left">
                <Image Source="Icons\forward.png" />
            </Button>
            <Button Command="Refresh" DockPanel.Dock="Left">
                <Image Source="Icons\refresh.png" />
            </Button>
            <Button Command="BrowseStop" DockPanel.Dock="Left">
                <Image Source="Icons\cancel.png" />
            </Button>
            <Separator />
            <Button DockPanel.Dock="Right">
                <Image Source="Icons\go.png" /> 
            </Button>
            <ComboBox HorizontalAlignment="Stretch" x:Name="uri" IsEditable="True" />
        </DockPanel>

        <StatusBar Height="23" x:Name="statusBar" DockPanel.Dock="Bottom" />

        <WindowsFormsHost>
            <skyb:GeckoWebBrowser x:Name="browser" />
        </WindowsFormsHost>

    </DockPanel>
</dock:DocumentContent>
